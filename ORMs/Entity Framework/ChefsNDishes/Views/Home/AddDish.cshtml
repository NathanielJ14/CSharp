@{
    ViewData["Title"] = "Create Dish";
}

@model Dish


<div class="text-center">
    <h1 class="display-4">Add a Dish</h1>

    <div>
        <form asp-action="CreateDish" asp-controller="Home" method="post">
        <label asp-for="Name" >Name</label>
        <input asp-for="Name" class="form-control">
        <span class="alert-danger d" asp-validation-for="Name"></span>

        <label asp-for="ChefId" >Chef</label>
        <select name="ChefId" class="form-control">
            @foreach (Chef c in ViewBag.AllChefs)
            {   
                <option value="@c.ChefId">@c.FirstName @c.LastName</option>
            }
        </select>

        <label asp-for="Tastiness" >Tastiness</label>
        <select name="Tastiness" class="form-control">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
        </select>

        <label asp-for="Calories" >Calories</label>
        <input value="0" asp-for="Calories" class="form-control">
        <span class="alert-danger d" asp-validation-for="Calories"></span>


        <button class="btn btn-primary button">Add New Dish</button>
    </form>
    </div>
    
</div>
