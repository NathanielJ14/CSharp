@{
    ViewData["Title"] = "View Page";
}
@model Dish

<div class="text-center">
    <h1 class="display-4">@Model.Name</h1>
    <nav>
        <a href="/">Home</a> 
        |
        <a href="Create">Add a Dish</a>
    </nav>

    <div class="box">
        <h2>@Model.Name by: @Model.Chef</h2>
        <p>@Model.Description</p>
        <p>Calories: @Model.Calories</p>
        <p>Tastiness: @Model.Tastiness</p>
    </div>

    <div class="links">
        <a class="btn btn-danger link" href="/dish/@Model.DishId/delete">Delete</a>
        
        <a class="btn btn-primary link" href="/dish/@Model.DishId/edit">Edit</a>
    </div>
</div>
